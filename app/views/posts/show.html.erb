<div style="display:flex;height:100%">
  <aside style="height:100%;position:fixed;width:240px">
    <%= react_component("UserSideMenu", { user: @user, isCurrentUser: current_user?(@user) }, { style: "height:100%" }) %>
  </aside>
  <main style="width:calc(100% - 240px);margin-left:240px">
    <%= react_component("PostShow", {
      post: @post,
      mountain: @mountain,
      user: @user,
      photos: @photos,
      currentUser: current_user,
      patchPostToken: form_authenticity_token(form_options: { action: post_path(@post), method: "patch" }),
      deletePostToken: form_authenticity_token(form_options: { action: post_path(@post), method: "delete" }),
      postLikeToken: form_authenticity_token(form_options: { action: likes_path, method: "post" }),
      deleteLikeToken: form_authenticity_token(form_options: {  method: "delete" })
    }, {
      style: "height:100%"
    }) %>
  </main>
</div>
